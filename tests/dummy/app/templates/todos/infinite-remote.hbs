<div class="infinite">
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Completed</th>
    </tr>

    {{#each item in pagedContent}}
      <tr class="todo">
        <td>{{item.name}}</td>
        <td>
          {{input type="checkbox" checked=completed}}
        </td>
      </tr>
    {{/each}}
  </table>

  <div class="next">
    <a href="#" {{action "loadNext"}}>Next</a>
  </div>
</div>
